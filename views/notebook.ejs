<html>
    <head>
		<title>Notebook</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
		<style type="text/css">
			body {
				background-color: #333333;
				color: #dfdbd2;
				font-family: Arial, Helvetica, sans-serif;
			}
			nav.Oberste {
				font-size: 0.9em;
			}
			a.notizLinks:link, a.notizLinks:active, a.notizLinks:visited {
				text-decoration: none;
				color:rgb(80, 176, 255);				
			}
			a.notizLinks:hover {
				font-weight: bold;
				color: dodgerblue;
				text-shadow: 1px 1px 5px #3e3d39;
			}
			div, a, i {
				/*border: 1px solid #4CAF50;*/
			}
			div {
				padding: 5px;
			}
			.clearfix {
				overflow: auto;
			}
			#cont_c25652f42e8ffff5711abca60ace0ac1 {
				float: right;
				top: 0;
				right: 0;
				padding: 0px;
			}
			#linkZeile {
				margin: 10px 0px 0px 0px;
				background-color: #444444;
			}
			#Ueberschrift {
				font-weight: normal;
			}
		</style>
    </head>
    <body>
		<a name="Seitenbeginn"></a>
		<!--Main Navbar-->
		<nav class="navbar navbar-expand-md bg-light navbar-light Oberste" style="padding:0px;background-color: #f8f8f8;">
			<!-- Links -->
			<ul class="navbar-nav">
				<li class="nav-item" style="font-size: 1.22em;margin: 6px 7px 3px 8px;">
					<a class="nav-link" href="#">#YourBook#</a>
				</li>
				<li class="nav-item" style="padding: 9px 6px 5px 7.5px;background-color:#e7e7e7;">
					<a class="nav-link" href="notebook">Notebook</a>
				</li>
				<li class="nav-item" style="padding: 9px 6px 5px 7.5px;">
					<a class="nav-link" href="messenger">Messeger</a>
				</li>
				<li class="nav-item" style="padding: 9px 6px 5px 7.5px;">
					<a class="nav-link" href="profile">Profile</a>
				</li>
				<li class="nav-item" style="padding: 9px 6px 5px 7.5px;">
					<a class="nav-link" href="dashboard">Dashboard</a>
				</li>
			</ul>
			<!--Logout Link-->
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">						
					<a class="nav-link" href="/logout" style="padding: 9px 15px 4px 0px;"><i class="fas fa-sign-out-alt"></i> Logout</a>
				</li>
			</ul>
		</nav>
		
		<!--Eingabebereich-->
		<div class="container">

			<!--Eingabebereich Neue Notiz-->
			<div id="eingabeNeueNotiz" class="collapse">
			<form action="/onNeueNotiz" method="POST">
				<div class="form-group">
					<label for="sel1">Comment:</label>
					<textarea class="form-control" rows="5" id="sel1" type="text" name="notiz" placeholder="Write something here..."></textarea>
					<input class="form-control" type="text" name="link" placeholder="Link-URL einfügen">
					<input class="form-control" type="text" name="linkName" placeholder="Link-Name einfügen (optional)">
				</div>
				<div class="form-group">
					<label for="sel2">Speicherort auswählen:</label>
					<select class="form-control" id="sel2" name="ordner">
					<% for(var i = 0; i < ordner.length; i++) { %>
						<option name="ordner" value="<%= ordner[i].ordner %>"><%= ordner[i].ordner %></option>
					<%}%>
					</select>
				</div>
				<button type="submit" class="btn btn-primary">Notiz Speichern</button>
			</form>
			</div>

			<!--Eingabebereich Neuer Ordner-->
			<div id="eingabeNeuerOrdner" class="collapse">
			<form action="/onNeuerOrdner" method="POST">
				<div class="form-group">
					<label for="sel3">Neuer Ordner:</label>
					<input class="form-control" type="text" id="sel3" name="ordner" placeholder="Hier Namen für neuen Ordner eingeben.">					
				</div>
				<button type="submit" class="btn btn-primary">Neuen Ordner Speichern</button>
			</form>
			</div>
		</div>

		<!--Navileiste mit zwei Buttons-->
		<nav style="margin-top: 20px" class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
			<!-- Brand class="navbar-brand" -->
			<a id="Ueberschrift" class="navbar-brand" title="Zum Seitenbeginn springen" href="#Seitenbeginn">Notebook</a>
			<ul class="navbar-nav">
				<li class="nav-item">
					<button class="btn btn-light" data-toggle="collapse" data-target="#eingabeNeueNotiz">Neue Notiz</button>
					<button class="btn btn-light" data-toggle="collapse" data-target="#eingabeNeuerOrdner">Neuen Ordner Erstellen</button>
				</li>
			</ul>
			<a class="nav-link ml-auto" title="Zum Seitenbeginn springen" href="#Seitenbeginn" style="margin:0px;padding:0px;"><i class="fas fa-arrow-up" style="font-size:24px;color:#dfdbd2;"></i></a>
		</nav>

		<!--dasWetter-->
		<!--<div id="cont_c25652f42e8ffff5711abca60ace0ac1"><script type="text/javascript" async src="https://www.daswetter.com/wid_loader/c25652f42e8ffff5711abca60ace0ac1"></script></div>-->

		<!--Auflistung der Tabelle-->
		<div class="container">
			<nav style="padding: 15px 0px 0px 0px;" class="navbar navbar-expand-md navbar-dark">
			<form action="/onOrdnerAuswahl" method="POST">
				
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div style="padding-left: 0px;" class="collapse navbar-collapse" id="collapsibleNavbar">
						<ul class="navbar-nav">
							<% for(var i = ordner.length-1; i >= 0; i--) { %>
							<li style="margin: 0px 4px 4px 0px;" class="nav-item">
								<button class="btn btn-dark" type="submit" name="ordner" value="<%= ordner[i].ordner %>"><%= ordner[i].ordner %></button>
							</li>
							<%}%>
						</ul>
					</div> 
				
			</form>
			</nav>

			<!--Linkzeilen-->
			<% for(var i = notes.length-1; i >= 0; i--) { %>
				<div id="linkZeile" class="clearfix">
					<dt style="color: #666666; float:right;"><%= notes[i].dateTime %></dt>
					<% if(ckeckForImage(notes[i].link) == true) { %>
					<dt><img src="<%= notes[i].link %>" style="max-width: 300px; max-height: 300px; float: left; margin-right: 10px;" alt="<%= notes[i].linkName %>"></dt>
					<% } else { %>
					<dt><a href="<%= notes[i].link %>" class="notizLinks" target="_blank"><%= notes[i].linkName %></a></dt>
					<% } %>
					<dt style="white-space:pre-wrap; word-wrap:break-word; color:#dfdbd2;"><%= notes[i].notiz %></dt>
				</div>
			<%}%>

		</div>

		<div class="container footer navbar-fixed-bottom">
			<p class="footer-text">Copyright 2018 ©</p>
		</div>

    </body>
</html>