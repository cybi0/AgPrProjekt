              <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
          </div> 
        </nav>

    <div class="container" style="margin-bottom: 30px;">
      <!--Header-->
      <h1>Messenger</h1>
      <p>Hallo <%= username %></p>
      <p>Du hast <b>0</b> ungelesene Mails!</p>
      <p>
        
      <!-- <div class="space">
        <h4>Was möchten Sie tun?</h4>
        <div class="row">
          <div class="col-md-12">
            <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#hide">Neue Mail verfassen</button>
            <button type="button" class="btn btn-default">Markierte als gelesen markieren</button>
          </div>
        </div>
      </div> -->

      <!--incoming mails-->
      <div class="space">
        <h4>Mails</h4>
        <div class="row">
          <div class="col-md-12">
            <% for(var i = 0; i < messeges.length; i++) { %>
              <div style="margin-top: 2px;" class="form-control"><%= messeges[i].mail %></div>
            <%}%>
          </div>          
        </div>
      </div>
      <div style="margin-top: 10px;">
          <button type="button" class="btn btn-success" data-toggle="collapse" data-target="#hide">Neue Mail verfassen</button>
          <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#hide">Antworten</button>
          <button type="button" class="btn btn-danger">Löschen</button>
      </div>

      <!--send mail-->
      <div id="hide" class="collapse">
        <div class="space">
          <h4>Neue Mail</h4>
          <form action="/neueMail" method="POST">
            <div class="form-group">
              <label>Neue Mail / Mail beantworten</label>
              <div class="form-group">
                <textarea class="form-control" rows="5" name="mail" placeholder="Schreibe hier deine neue Nachricht."></textarea>
              </div>
            </div>
            <div class="form-group">
              <label for="outAdress">Senden an:</label>
              <select class="form-control" id="outAdress" name="username">
              <% for(var i = 0; i < names.length; i++) { %>
                <option name="username" value="<%= names[i].username %>"><%= names[i].username %></option>
              <%}%>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Mail Senden</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>